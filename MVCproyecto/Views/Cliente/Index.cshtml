@model IEnumerable<MVCproyecto.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>
<style>
    h1 {
        color: white;
        font-family: 'Times New Roman', Times, serif;
    }
</style>

<p>
    <a class="btn btn-success" asp-action="Create">Crear nuevo cliente</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id=item.Id }, 
                new { onclick = "return confirmation();", @class = "btn btn-primary"}) |
                @Html.ActionLink("Details", "Details", new { id=item.Id },
                new { onclick = "return confirmation();", @class = "btn btn-primary"}) |
                @Html.ActionLink("Delete", "Delete", new {id=item.Id },
                new { onclick = "return confirmation();", @class = "btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
